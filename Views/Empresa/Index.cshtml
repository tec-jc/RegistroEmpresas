@model IEnumerable<RegistroEmpresas.Models.Empresa>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Empresas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Empresa</a>
</p>
<table class="table table-striped table-responsive">
    <thead class="bg-secondary text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rubro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacto.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rubro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto.Nombre)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id=item.Id }, new {@class="btn btn-info"}) |
                @Html.ActionLink("Detalle", "Details", new { id=item.Id }, new {@class="btn btn-secondary"}) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new {@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
